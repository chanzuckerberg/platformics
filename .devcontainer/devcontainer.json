{
    "name": "Dev App",
    "dockerComposeFile": ["../docker-compose.yml"],
    "service": "dev-app",
    "workspaceFolder": "/app",
    "customizations": {
        "vscode": {
            "settings": {
                 "extensions.verifySignature": false
            },
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.black-formatter",
                "matangover.mypy",
                "GitHub.copilot"
            ]
        }
    }
}
